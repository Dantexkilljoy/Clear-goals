<div>
  <div>
    <h1>
      Step #<%= @the_step.id %> details
    </h1>

    <div>
      <div>
        <a href="/steps">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_step/<%= @the_step.id %>">
          Delete step
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_step.name %>
      </dd>

      <dt>
        Resources
      </dt>
      <dd>
        <%= @the_step.resources %>
      </dd>

      <dt>
        Skills
      </dt>
      <dd>
        <%= @the_step.skills %>
      </dd>

      <dt>
        Time allotted
      </dt>
      <dd>
        <%= @the_step.time_allotted %>
      </dd>

      <dt>
        Action plan
      </dt>
      <dd>
        <%= @the_step.action_plan_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_step.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_step.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit step
    </h2>

    <form action="/modify_step/<%= @the_step.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_step.name %>">
      </div>

      <div>
        <label for="resources_box">
          Resources
        </label>

        <input type="text" id="resources_box" name="query_resources" value="<%= @the_step.resources %>">
      </div>

      <div>
        <label for="skills_box">
          Skills
        </label>

        <input type="text" id="skills_box" name="query_skills" value="<%= @the_step.skills %>">
      </div>

      <div>
        <label for="time_allotted_box">
          Time allotted
        </label>

        <input type="text" id="time_allotted_box" name="query_time_allotted" value="<%= @the_step.time_allotted %>">
      </div>

      <div>
        <label for="action_plan_id_box">
          Action plan
        </label>

        <input type="text" id="action_plan_id_box" name="query_action_plan_id" value="<%= @the_step.action_plan_id %>">
      </div>

      <button>
        Update step
      </button>
    </form>
  </div>
</div>

<hr>
